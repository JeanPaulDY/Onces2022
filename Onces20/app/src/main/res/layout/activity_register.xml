<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja_main"
    tools:context=".view.ui.activities.RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fondo2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:fontFamily="@font/roboto_mono_medium_italic"
        android:text="Registro"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="108dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Usuario"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/borde_redondoblanco"
            android:hint="        digite su usuario"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Contraseña"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/borde_redondoblanco"
            android:hint="        digite su contraseña"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Email"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/borde_redondoblanco"
            android:hint="        ingrese un email"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Telefono"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/borde_redondoblanco"
            android:hint="        digite su telefono"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/BTregistrate"
        android:layout_width="285dp"
        android:layout_height="69dp"
        android:background="@drawable/borde_redondo"
        android:fontFamily="@font/roboto_mono_bold_italic"
        android:text="Resgistrate"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:background="@drawable/borde_redondo"
        tools:fontFamily="@font/roboto_mono_bold_italic"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="496dp" />

</androidx.constraintlayout.widget.ConstraintLayout>